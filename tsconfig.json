{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "checkJs": false,
    "allowJs": true,
    "target": "es2017",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "typeRoots": ["functions/typings", "node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["functions/typings", "functions/src", "functions/index.js"],
  "exclude": ["functions/build"]
}
